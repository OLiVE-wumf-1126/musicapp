.posts_index
  .content__right
  .content__center
    - @posts.each do |post|
      .content__center__message
        .content__center__message__left
          .content__center__message__left--image
            - if post.image.present?
              = image_tag post.image.url
        .content__center__message__right
          .content__center__message__right__text
            = link_to post.title, post_path(post.id),class: "title"
          .content__center__message__right__artistname
            Artist ：
            = post.artist_name
        .content__center__message__bottom
          .content__center__message__bottom__data
            = post.created_at
        -# .content__center__message__edit
        -#   - if user_signed_in? && current_user.id == post.user_id
        -#     .content__center__message__edit--btn
        -#       = link_to '削除', "/posts/#{post.id}", method: :delete
        -#       = link_to '編集', "/posts/#{post.id}/edit", method: :get
        .content__center__message__user
          .content__center__message__user--data
            投稿者：
            %a{ href: "/users/#{post.user.id}", class: "user"}
              = post.user.name
  .content__left
    %p おにゅーす